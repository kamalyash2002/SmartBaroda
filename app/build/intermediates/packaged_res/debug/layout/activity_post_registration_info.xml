<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".register.RegisterSuccess">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="8dp"
        android:scrollbarSize="5dp"
        android:scrollbarThumbVertical="@color/violet"
        android:scrollbarTrackVertical="@color/gray_d9D9D9"
        tools:ignore="RtlSymmetry">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:padding="16dp"
                style="@style/dmsans_bold_26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="20dp"
                android:text="@string/congratulation_text"
                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/llGlass"
                android:layout_width="match_parent"
                android:layout_height="440dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_glass"
                android:orientation="vertical"
                android:paddingLeft="35dp"
                android:paddingTop="20dp"
                android:paddingRight="35dp"

                android:paddingBottom="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rev_black">

                    <TextView
                        android:id="@+id/textView32"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rev_one"
                        android:backgroundTint="@color/colorSecondary"

                        android:fontFamily="@font/overpass_medium"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Customer ID"
                        android:textColor="#222"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tvUid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/overpass_medium"
                        android:paddingLeft="10dp"
                        android:text="NSABC001802808IN"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="10sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rev_black">

                    <TextView
                        android:layout_width="100dp"

                        android:layout_height="wrap_content"
                        android:background="@drawable/rev_one"
                        android:backgroundTint="@color/colorSecondary"
                        android:fontFamily="@font/overpass_medium"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Name"

                        android:textColor="#222"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/overpass_medium"
                        android:paddingLeft="10dp"
                        android:text="John Doe"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="10sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rev_black">

                    <TextView
                        android:layout_width="100dp"

                        android:layout_height="wrap_content"
                        android:background="@drawable/rev_one"
                        android:backgroundTint="@color/colorSecondary"
                        android:fontFamily="@font/overpass_medium"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Email"
                        android:textColor="#222"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/overpass_medium"
                        android:paddingLeft="10dp"
                        android:text="john@user.com"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="10sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rev_black">

                    <TextView
                        android:id="@+id/getPhone"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rev_one"
                        android:backgroundTint="@color/colorSecondary"

                        android:fontFamily="@font/overpass_medium"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Phone"
                        android:textColor="#222"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tvPhone"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorSecondary"
                        android:fontFamily="@font/overpass_medium"
                        android:paddingLeft="10dp"
                        android:text="+91 844521 47583"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="10sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rev_black">

                    <TextView
                        android:id="@+id/getFather"

                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rev_one"
                        android:backgroundTint="@color/colorSecondary"
                        android:fontFamily="@font/overpass_medium"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Father's Name"
                        android:textColor="#222"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tvFather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/overpass_medium"
                        android:paddingLeft="10dp"
                        android:text="Ryan Doe"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rev_black">

                    <TextView
                        android:id="@+id/getDob"

                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rev_one"
                        android:backgroundTint="@color/colorSecondary"
                        android:fontFamily="@font/overpass_medium"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="D.O.B."
                        android:textColor="#222"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tvDob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/overpass_medium"
                        android:paddingLeft="10dp"
                        android:text="01-01-1990"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="10sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rev_black">

                    <TextView
                        android:id="@+id/getGender"

                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rev_one"
                        android:backgroundTint="@color/colorSecondary"
                        android:fontFamily="@font/overpass_medium"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Gender"
                        android:textColor="#222"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tvGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/overpass_medium"
                        android:paddingLeft="10dp"
                        android:text="Male"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="10sp"

                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView36"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/registration_details_sent"
                    android:textColor="@color/primaryGray"
                    android:textSize="12sp" />





    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonNext"

                style="@style/ButtonBigVioletTheme"
                android:text="@string/next"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="37dp"
                android:layout_marginBottom="16dp"
                android:layout_alignParentBottom="true" />





        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>