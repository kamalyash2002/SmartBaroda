<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPhone">


    <ImageView
        android:id="@+id/ivMan"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/manwithphone" />







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="250dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="50dp">

            <!--           begins-->


            <TextView
                android:id="@+id/tvHeadOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:textSize="32sp"
                android:fontFamily="@font/overpass_semibold"
                android:text="Enter your"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tvHeadTwo"
                android:layout_below="@+id/tvHeadOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="32sp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="32dp"
                android:fontFamily="@font/overpass_semibold"
                android:text="registered phone number"
                android:textColor="@color/colorPrimary"
                android:background="@color/white"
                />

            <LinearLayout
                android:id="@+id/editTextLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvHeadTwo"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_bg_white"
                android:elevation="@dimen/cardview_default_elevation"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"


                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:drawableLeft="@drawable/ic_flag"
                    android:drawablePadding="5dp"
                    android:text="+91"
                    android:textColorHint="#222222"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/editTextPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/white"
                    android:ems="10"
                    android:hint="xxxxx xxxxx"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:paddingLeft="25dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="#4A4C59"
                    android:textColorHint="#818181"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvOTPText"
                android:layout_below="@+id/editTextLinear"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="35dp"
                android:text="An OTP will be sent on this number"
                android:textColor="#666"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvOTtpHeading"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="14sp"
                android:text="OTP"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/otpLayout"
                android:visibility="gone"
                android:layout_marginTop="200dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:textAlignment="center">

                <EditText
                    android:id="@+id/editTextTextPassword"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/edit_circle"
                    android:ems="10"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="phone"
                    android:maxLength="1"
                    android:nextFocusForward="@id/editTextTextPassword2"
                    android:textColor="@color/black"
                    tools:ignore="labelFor" />

                <EditText
                    android:id="@+id/editTextTextPassword2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/edit_circle"
                    android:ems="10"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="phone"
                    android:maxLength="1"
                    android:nextFocusForward="@id/editTextTextPassword3"
                    tools:ignore="labelFor" />                        android:textColor="@color/black"


                <EditText
                    android:id="@+id/editTextTextPassword3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/edit_circle"
                    android:ems="10"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="phone"
                    android:maxLength="1"
                    android:nextFocusForward="@id/editTextTextPassword4"
                    android:textColor="@color/black"
                    tools:ignore="labelFor" />

                <EditText
                    android:id="@+id/editTextTextPassword4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/edit_circle"
                    android:ems="10"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="phone"
                    android:maxLength="1"
                    android:nextFocusForward="@id/editTextTextPassword5"
                    android:textColor="@color/black"
                    tools:ignore="labelFor" />

                <EditText
                    android:id="@+id/editTextTextPassword5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/edit_circle"
                    android:ems="10"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="phone"
                    android:maxLength="1"
                    android:nextFocusForward="@id/editTextTextPassword6"
                    android:textColor="@color/black"
                    tools:ignore="labelFor" />

                <EditText
                    android:id="@+id/editTextTextPassword6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/edit_circle"
                    android:ems="10"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="phone"
                    android:maxLength="1"
                    android:textColor="@color/black"
                    tools:ignore="labelFor" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:gravity="end">

                <!--                <TextView-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:fontFamily="@font/overpass_medium"-->
                <!--                    android:paddingLeft="50dp"-->
                <!--                    android:text="Resend again in "-->
                <!--                    android:textAlignment="viewStart"-->
                <!--                    android:textColor="#5C5C5C"-->
                <!--                    android:textSize="14sp" />-->

                <TextView

                    android:layout_marginTop="200dp"
                    android:id="@+id/countDown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overpass_medium"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnOtp"
                    style="@style/ButtonBigVioletTheme"
                    android:layout_alignParentBottom="true"
                    android:layout_marginHorizontal="37dp"
                    android:layout_marginTop="67dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/disabled2"
                    android:enabled="false"
                    android:text="@string/proceed_further" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/tvBottomText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="New to Neosaturn? "
                        android:textAlignment="center"
                        android:textColor="#968E8E"

                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvRegister"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"

                        android:text="Register"
                        android:textColor="#311432"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp">


            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>




</RelativeLayout>

