<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayout_dialog_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_fingerprint_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/fingure_tap" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_set_up_your_touch_id"
        style="@style/overpass_medium_22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_fingerprint_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="@string/please_set_up_your_touch_id"
        android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_msg_dialogbiometric"
        style="@style/overpass_medium_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_set_up_your_touch_id"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:letterSpacing="0.03"
        android:text="@string/add_your_fingerprint"
        android:textAlignment="center"
        android:textSize="12sp"
        tools:ignore="UnusedAttribute" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_transfer_text_1"
        style="@style/overpass_semibold_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_fingerprint_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:gravity="center" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dialog_logo"
        android:layout_width="99dp"
        android:layout_height="100dp"
        android:layout_below="@+id/txt_msg_dialogbiometric"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/ic_finger_prints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/skipButton"
        style="@style/ButtonStyleBlackBackground"
        android:text="@string/skip_this_step"
        android:textAllCaps="false"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>