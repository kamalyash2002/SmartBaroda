<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KycVerification">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/rev_black"
            android:backgroundTint="@color/colorSecondary"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="70dp"
                android:background="@drawable/rev_black"
                android:backgroundTint="@color/white"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="vertical">

                <!--           begins-->

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp"

                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/dmsans_bold"
                    android:text="Verify KYC Verification"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="22sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/dmsans_bold"
                    android:text="Enter Aadhaar Details"
                    android:textAlignment="textStart"
                    android:textColor="#000"
                    android:textSize="16sp"

                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="6dp"
                    android:fontFamily="@font/overpass_medium"
                    android:text="Full name"
                    android:textColor="#311432"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/name"
                    android:background="@drawable/edit_text_square_rounded"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#3C444E"
                    android:textSize="16sp"
                    android:paddingLeft="20dp"
                    android:hint="Full name as per aadhaar"

                    android:inputType="textPersonName"

                    android:paddingRight="20dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:fontFamily="@font/overpass_medium"
                    android:gravity="start"

                    />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="6dp"
                    android:fontFamily="@font/overpass_medium"
                    android:text="Aadhaar number"
                    android:textColor="#311432"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/aadhaar"
                    android:background="@drawable/edit_text_square_rounded"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#3C444E"
                    android:textSize="16sp"
                    android:paddingLeft="20dp"
                    android:hint="Aadhaar number"
                    android:maxLength="12"
                    android:inputType="number"

                    android:paddingRight="20dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:fontFamily="@font/overpass_medium"
                    android:gravity="start"

                    />


                <!--Adhaar front-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/dmsans_bold"
                    android:text="Upload Aadhaar"
                    android:textAlignment="textStart"
                    android:textColor="#311432"
                    android:textSize="16sp"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_light_violet_corner_10"

                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/frontStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"

                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="10dp"
                        android:paddingLeft="14sp"
                        android:text="Pending"
                        android:textStyle="bold"
                        android:textAlignment="textEnd"
                        android:textColor="#FF9B3F"
                        android:textSize="12sp"
                        />


                    <ImageView
                        android:id="@+id/imageViewPick"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        app:srcCompat="@drawable/kycfiles" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="10dp"
                        android:paddingLeft="14sp"
                        android:text="Front Side of Aadhaar Card"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        >
                        <!--                        -->
                        <!--                        <ImageView-->
                        <!--                            android:id="@+id/imageView"-->
                        <!--                            android:layout_width="fill_parent"-->
                        <!--                            android:layout_height="fill_parent"-->
                        <!--                            android:layout_above="@+id/button"-->
                        <!--                            android:layout_alignParentTop="true" />-->

                        <!--                        -->
                        <!--                        <ImageView-->
                        <!--                            android:id="@+id/capture_aadhaar2"-->
                        <!--                            android:layout_width="wrap_content"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:layout_marginBottom="20dp"-->
                        <!--                            android:layout_marginRight="10dp"-->
                        <!--                            android:background="@drawable/camerabtn"-->
                        <!--                            />-->


                        <!--                        <ImageView-->
                        <!--                            android:id="@+id/upload_aadhaarr"-->
                        <!--                            android:layout_width="wrap_content"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:layout_marginBottom="20dp"-->
                        <!--                            android:background="@drawable/uploadbtn"-->
                        <!--                            />-->
                        <Button
                            android:id="@+id/cameraButton"
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:layout_margin="10dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:background="@drawable/btn_primary"
                            android:backgroundTint="@color/colorPrimary"
                            android:text="Camera"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                        <Button
                            android:id="@+id/uploadButton"
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:background="@drawable/btn_primary"
                            android:text="upload"
                            android:backgroundTint="@color/colorPrimary"
                            android:textColor="@color/white"
                            android:layout_margin="10dp"
                            android:textSize="10sp" />


                    </LinearLayout>

                </LinearLayout>

                <!--           Adhaar back-->


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:layout_marginBottom="24dp"

                    android:text="Front Side of Aadhaar Card"

                    android:textColor="#333333"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_light_violet_corner_10"

                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/backStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"

                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="10dp"
                        android:paddingLeft="14sp"
                        android:text="Pending"
                        android:textStyle="bold"
                        android:textAlignment="textEnd"
                        android:textColor="#FF9B3F"
                        android:textSize="12sp"
                        />


                    <ImageView
                        android:id="@+id/imageViewPick2"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        app:srcCompat="@drawable/kycfiles" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="10dp"
                        android:paddingLeft="14sp"
                        android:text="Back Side of Aadhaar Card"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        >
                        <!--                        <ImageView-->
                        <!--                            android:id="@+id/capture_aadhaar"-->
                        <!--                            android:layout_width="wrap_content"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:layout_marginBottom="20dp"-->
                        <!--                            android:layout_marginRight="10dp"-->
                        <!--                            android:background="@drawable/camerabtn"-->
                        <!--                            />-->


                        <!--                        <ImageView-->
                        <!--                            android:id="@+id/upload_aadhaar"-->
                        <!--                            android:layout_width="wrap_content"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:layout_marginBottom="20dp"-->
                        <!--                            android:background="@drawable/uploadbtn"-->
                        <!--                            />-->

                        <Button
                            android:id="@+id/cameraButton2"
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:background="@drawable/btn_primary"
                            android:textColor="@color/white"
                            android:layout_margin="10dp"
                            android:textSize="10sp"
                            android:backgroundTint="@color/colorPrimary"
                            android:text="Camera" />

                        <Button
                            android:id="@+id/uploadButton2"
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:background="@drawable/btn_primary"
                            android:text="upload"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:textColor="@color/white"
                            android:layout_margin="10dp"
                            android:backgroundTint="@color/colorPrimary"
                            android:textSize="10sp" />


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="24dp"
                    android:text="Back Side of Aadhaar Card"
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSubmit"
                    android:text="Submit"
                    android:backgroundTint="@color/disabled2"
                    android:enabled="false"

                    style="@style/ButtonBigVioletTheme"
                    android:layout_width="match_parent"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/dmsans_bold"
                    android:layout_marginBottom="50dp"
                    />



            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>