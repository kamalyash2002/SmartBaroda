<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".app_lock.PinLockActivity">

    <ImageView
        android:id="@+id/ivCurve"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_regularbg"
        android:layout_above="@id/card_pin"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignTop="@id/ivCurve"
        android:layout_alignBottom="@id/ivCurve">

        <ImageView
            android:id="@+id/img_pin_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_dataprivacy" />

        <TextView
            android:id="@+id/textview_pinmessage"
            android:fontFamily="@font/overpass_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_pin_icon"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="@string/pin_text"
            android:textAlignment="center"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/pinshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_pinmessage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <RelativeLayout
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:background="@drawable/otp">

                <com.example.infuxion_alternate.utils.CircleImageView
                    android:id="@+id/imageview_pincount_0"
                    android:layout_width="@dimen/size_of_pindot"
                    android:layout_height="@dimen/size_of_pindot"
                    android:layout_centerInParent="true"
                    android:src="@color/sky_blue"
                    android:visibility="gone"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/otp">

                <com.example.infuxion_alternate.utils.CircleImageView
                    android:id="@+id/imageview_pincount_1"
                    android:layout_width="@dimen/size_of_pindot"
                    android:layout_height="@dimen/size_of_pindot"
                    android:layout_centerInParent="true"
                    android:src="@color/sky_blue"
                    android:visibility="gone"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/otp">

                <com.example.infuxion_alternate.utils.CircleImageView
                    android:id="@+id/imageview_pincount_2"
                    android:layout_width="@dimen/size_of_pindot"
                    android:layout_height="@dimen/size_of_pindot"
                    android:layout_centerInParent="true"
                    android:src="@color/sky_blue"
                    android:visibility="gone"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:background="@drawable/otp">

                <com.example.infuxion_alternate.utils.CircleImageView
                    android:id="@+id/imageview_pincount_3"
                    android:layout_width="@dimen/size_of_pindot"
                    android:layout_height="@dimen/size_of_pindot"
                    android:layout_centerInParent="true"
                    android:src="@color/sky_blue"
                    android:visibility="gone"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/card_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/num_1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    style="@style/overpass_medium_14"
                    android:background="@drawable/bg_blue_gradient_circle"
                    android:layout_marginBottom="@dimen/numpad_margin"
                    android:layout_marginEnd="@dimen/numpad_margin"
                    android:text="@string/_1"
                    tools:ignore="NestedWeights"
                    android:layout_alignParentStart="true"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/num_2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    style="@style/overpass_medium_14"
                    android:background="@drawable/bg_blue_gradient_circle"
                    android:layout_marginBottom="@dimen/numpad_margin"
                    android:layout_marginEnd="@dimen/numpad_margin"
                    android:gravity="center"
                    android:text="@string/_2"
                    android:layout_centerHorizontal="true"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/num_3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    style="@style/overpass_medium_14"
                    android:background="@drawable/bg_blue_gradient_circle"
                    android:layout_marginBottom="@dimen/numpad_margin"
                    android:gravity="center"
                    android:text="@string/_3"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/num_4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                     style="@style/overpass_medium_14"
                    android:background="@drawable/bg_blue_gradient_circle"
                    android:layout_marginBottom="@dimen/numpad_margin"
                    android:layout_marginEnd="@dimen/numpad_margin"
                    android:gravity="center"
                    android:text="@string/_4"
                    tools:ignore="NestedWeights"
                    android:layout_alignParentStart="true"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/num_5"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                     style="@style/overpass_medium_14"
                    android:background="@drawable/bg_blue_gradient_circle"
                    android:layout_marginBottom="@dimen/numpad_margin"
                    android:layout_marginEnd="@dimen/numpad_margin"
                    android:gravity="center"
                    android:text="@string/_5"
                    android:layout_centerInParent="true"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/num_6"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                     style="@style/overpass_medium_14"
                    android:background="@drawable/bg_blue_gradient_circle"
                    android:layout_marginBottom="@dimen/numpad_margin"
                    android:gravity="center"
                    android:text="@string/_6"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/num_7"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                     style="@style/overpass_medium_14"
                    android:background="@drawable/bg_blue_gradient_circle"
                    android:layout_marginBottom="@dimen/numpad_margin"
                    android:layout_marginEnd="@dimen/numpad_margin"
                    android:gravity="center"
                    android:text="@string/_7"
                    tools:ignore="NestedWeights"
                    android:layout_alignParentStart="true"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/num_8"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                     style="@style/overpass_medium_14"
                    android:background="@drawable/bg_blue_gradient_circle"
                    android:layout_marginBottom="@dimen/numpad_margin"
                    android:layout_marginEnd="@dimen/numpad_margin"
                    android:gravity="center"
                    android:text="@string/_8"
                    android:layout_centerHorizontal="true"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/num_9"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                     style="@style/overpass_medium_14"
                    android:background="@drawable/bg_blue_gradient_circle"
                    android:layout_marginBottom="@dimen/numpad_margin"
                    android:gravity="center"
                    android:text="@string/_9"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/num_0"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="@dimen/numpad_margin"
                    android:layout_marginStart="@dimen/numpad_margin"
                    style="@style/overpass_medium_14"
                    android:background="@drawable/bg_blue_gradient_circle"
                    android:gravity="center"
                    android:text="@string/_0"
                    android:layout_centerHorizontal="true"/>

                <RelativeLayout
                    android:id="@+id/num_backspace"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:layout_alignParentEnd="true">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="23dp"
                        android:layout_centerInParent="true"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_pin_backspace" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>