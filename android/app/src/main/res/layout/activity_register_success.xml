<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.RegisterSuccess">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/overpass_regular"
                android:padding="20dp"
                android:text="Congratulations! You have been registered successfully"
                android:textColor="#333333"
                android:textSize="26sp" />


            <LinearLayout
                android:id="@+id/llGlass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="250dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_glass"
                android:orientation="vertical"
                android:paddingLeft="35dp"
                android:paddingTop="60dp"
                android:paddingRight="35dp"

                android:paddingBottom="20dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="1000000dp">
                    <ImageView
                        android:id="@+id/imageview"
                        android:layout_width="150dp"
                        android:layout_height="199dp"
                        android:scaleX="-1"
                        >
                    </ImageView>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rev_black">

                    <TextView
                        android:id="@+id/textView32"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rev_one"
                        android:backgroundTint="@color/colorSecondary"

                        android:fontFamily="@font/overpass_medium"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Customer ID"
                        android:textColor="#222"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tvUid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/overpass_medium"
                        android:paddingLeft="10dp"
                        android:text="INFN6F1XO"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="10sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rev_black">

                    <TextView
                        android:layout_width="100dp"

                        android:layout_height="wrap_content"
                        android:background="@drawable/rev_one"
                        android:backgroundTint="@color/colorSecondary"
                        android:fontFamily="@font/overpass_medium"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Name"

                        android:textColor="#222"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/overpass_medium"
                        android:paddingLeft="10dp"
                        android:text="John Doe"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="10sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rev_black">

                    <TextView
                        android:layout_width="100dp"

                        android:layout_height="wrap_content"
                        android:background="@drawable/rev_one"
                        android:backgroundTint="@color/colorSecondary"
                        android:fontFamily="@font/overpass_medium"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Email"
                        android:textColor="#222"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/overpass_medium"
                        android:paddingLeft="10dp"
                        android:text="john@user.com"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="10sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rev_black">

                    <TextView
                        android:id="@+id/getPhone"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rev_one"
                        android:backgroundTint="@color/colorSecondary"

                        android:fontFamily="@font/overpass_medium"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Phone"
                        android:textColor="#222"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tvPhone"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorSecondary"
                        android:fontFamily="@font/overpass_medium"
                        android:paddingLeft="10dp"
                        android:text="+91 844521 47583"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="10sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rev_black">

                    <TextView
                        android:id="@+id/getFather"

                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rev_one"
                        android:backgroundTint="@color/colorSecondary"
                        android:fontFamily="@font/overpass_medium"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Father's Name"
                        android:textColor="#222"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tvFather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/overpass_medium"
                        android:paddingLeft="10dp"
                        android:text="Ryan Doe"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rev_black">

                    <TextView
                        android:id="@+id/getDob"

                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rev_one"
                        android:backgroundTint="@color/colorSecondary"
                        android:fontFamily="@font/overpass_medium"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="D.O.B."
                        android:textColor="#222"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tvDob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/overpass_medium"
                        android:paddingLeft="10dp"
                        android:text="01-01-1990"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="10sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rev_black">

                    <TextView
                        android:id="@+id/getGender"

                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rev_one"
                        android:backgroundTint="@color/colorSecondary"
                        android:fontFamily="@font/overpass_medium"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Gender"
                        android:textColor="#222"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tvGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/overpass_medium"
                        android:paddingLeft="10dp"
                        android:text="Male"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="10sp"

                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView36"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/overpass_light"
                    android:text="Your registration details have been sent to your email address, phone number and whatsapp (if any)"
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/button_next6"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_primary"
                    android:fontFamily="@font/overpass_medium"
                    android:text="Next"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rlTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/backBtn"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="@color/material_on_surface_stroke"
                android:drawableRight="@drawable/ic_back"
                android:paddingLeft="15dp"
                android:privateImeOptions="15dp"

                />

            <TextView
                android:id="@+id/titlebar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/overpass_medium"
                android:text="Registration Information"
                android:textAlignment="center"
                android:textColor="#141414"
                android:textSize="16sp" />


        </RelativeLayout>


        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="4dp"
            android:src="@drawable/btn_primary"
            android:scaleType="fitCenter"
            />
    </LinearLayout>

</RelativeLayout>