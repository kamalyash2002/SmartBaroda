        android:text="Full name"
        android:textColor="#311432"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/name"
        android:hint=" Name as per on PAN Card"
        android:inputType="textPersonName"
        android:background="@drawable/edit_text_square_rounded"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#3C444E"
        android:textSize="16sp"
        android:paddingLeft="20dp"


        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:fontFamily="@font/overpass_medium"
        android:gravity="start"

        />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="6dp"
        android:fontFamily="@font/overpass_medium"
        android:text="PAN ID"
        android:textColor="#311432"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/panNo"
        android:hint="Unique ID as per on document"
        android:inputType="text"

        android:background="@drawable/edit_text_square_rounded"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#3C444E"
        android:textSize="16sp"
        android:paddingLeft="20dp"
        android:maxLength="10"

        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:fontFamily="@font/overpass_medium"
        android:gravity="start"

        />



