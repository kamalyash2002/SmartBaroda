<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyDatePickerstyle"></style>

    <style name="blue">blue</style>
    <style name="MyAutofilledHighlight" parent="Theme.Infuxion_alternate">
        <item name="android:autofilledHighlight">@color/transparent</item>

    </style>

    <style name="MyDatePickerStyle" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="MyDatePicker" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/indigo</item>
        <item name="android:calendarTextColor">@color/white</item>
        <item name="android:datePickerMode">calendar</item>
    </style>

    <style name="MyDatePickerText" parent="@android:style/TextAppearance.Material.Widget.Button.Inverse">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>




</resources>